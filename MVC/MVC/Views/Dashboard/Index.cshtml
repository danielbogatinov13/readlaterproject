@model MVC.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<h3>Most Clicked Categories</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categories)
        </th>
        <th>
            Click Count
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @{
                    var sum = item.Bookmarks.Sum(x => x.ClickCount);
                }
                @sum
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { categoryId = item.ID })
            </td>
        </tr>
    }

</table>

<h3>Most Clicked Bookmarks</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bookmarks)
        </th>
        <th>
            Click Count
        </th>
    </tr>

    @foreach (var item in Model.Bookmarks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(model => item.ClickCount)
            </td>
        </tr>
    }

</table>
